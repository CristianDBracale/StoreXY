@using StoreXY.Web.Controllers
@using StoreXY.Web.Helpers
@using StoreXY.BusinessModel;
@using StoreXY.ResourcesManager;

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.Label("Exam Evertec", new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Select User", UserController.ActionsUser.Index.ToString(), ControllerHelpers.UserController.ToString())
                    <li>@Html.ActionLink("All Orders", OrderController.ActionsOrder.Index.ToString(), ControllerHelpers.OrderController.ToString(), new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Create Order", OrderController.ActionsOrder.CreateOrder.ToString(), ControllerHelpers.OrderController.ToString(), new { area = "" }, null)</li>
                </ul>
                <span id="lblSelectedUser" class="fRigth">@(Session["IdClientSelected"] == null ? "" : Resources.GetMensage("ClientSelected") + ": " + Gateway.GetUserById(long.Parse(Session["IdClientSelected"].ToString())).Name)</span>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
