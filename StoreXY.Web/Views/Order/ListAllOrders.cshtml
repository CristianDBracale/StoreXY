@model List<StoreXY.DTOs.ListOrderDTO>
@using StoreXY.DTOs;

<div class="row">
    @if (Model.Count > 0)
    {
        <table class="table table-responsive">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Status</th>
                <th>Client</th>
                <th>Actions</th>
            </tr>
            @foreach (ListOrderDTO order in Model)
            {
                <tr>
                    <td>@order.id</td>
                    <td>@order.customer_name</td>
                    <td>@order.customer_email</td>
                    <td>@order.customer_mobile</td>
                    <td>@order.status</td>
                    <td>@order.nameClient</td>
                    <td>Agregar botones</td>
                </tr>
            }
        </table>
    }
    else
    {
        <h3>No se encontraron Ordenes</h3>
    }
</div>
